/* Move down content because we have a fixed navbar that is 50px tall */

/*
 * Global add-ons
 */

header
	position: fixed;
	width: 100%;
	z-index: 999;

.sub-header {
  padding-bottom: 10px;
  border-bottom: 1px solid #eee;
}

/*
 * Top navigation
 * Hide default border to remove 1px line.
 */
.navbar-fixed-top {
  border: 0;
}

.sidebar {
  position: fixed;
  top: 90px;
  bottom: 0px;
  left: 0;
  z-index: 10;
  display: block;
  padding: 20px;
  overflow-x: hidden;
  overflow-y: auto; /* Scrollable contents if viewport is shorter than content. */
  background-color: #f5f5f5;
  border-right: 1px solid #eee;
}

/* Sidebar navigation */
.nav-sidebar {
  margin-right: -21px; /* 20px padding + 1px border */
  margin-bottom: 20px;
  margin-left: -20px;
}
.nav-sidebar > li > a {
  padding-right: 20px;
  padding-left: 20px;
}
.nav-sidebar > .active > a,
.nav-sidebar > .active > a:hover,
.nav-sidebar > .active > a:focus {
  color: #fff;
  background-color: #428bca;
}

.form-group .map-box
	width 50%
	float left
	height 300px

#location-map
	height 100%

/*
 * Main content
 */

.main {
padding-right: 40px;
padding-left: 40px;
}
.main .page-header {
  margin-top: 30px;
}

.img-thumbnail {
  width: 110px;
  margin-bottom: 15px;
}